{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TEST: specific file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv",
        "${file}"
      ]
    },
    {
      "name": "TEST: all files",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv"
      ]
    },
    {
      "name": "RUN: web-agent module",
      "type": "debugpy",
      "request": "launch",
      "module": "web_agent.main"
    },
    {
      "name": "RUN: web-agent module with Logfire",
      "type": "debugpy",
      "request": "launch",
      "module": "web_agent.main",
      "args": [
        "--logfire"
      ]
    }
  ]
}